CREATE TABLE `m_params_relations` (  `id` int(10) unsigned NOT NULL AUTO_INCREMENT,  `item_type` varchar(255) NOT NULL,  `item_id` int(10) unsigned NOT NULL,  `param_id` int(10) unsigned NOT NULL,  PRIMARY KEY (`id`),  KEY `item_type` (`item_type`,`item_id`,`param_id`),  KEY `item_id` (`item_id`),  KEY `param_id` (`param_id`),  CONSTRAINT `m_params_id_relation` FOREIGN KEY (`param_id`) REFERENCES `m_params` (`id`) ON DELETE CASCADE ON UPDATE CASCADE) ENGINE=InnoDB DEFAULT CHARSET=utf8